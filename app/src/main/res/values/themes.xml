<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Default application theme. -->
    <style name="Theme.CAIRclient" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#4596df</item> <!-- Vibrant sky blue -->
        <item name="colorPrimaryVariant">#2a6db2</item> <!-- Deeper blue for contrast -->
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">#4cc8b1</item> <!-- Soft teal/mint that works with #4596df -->
        <item name="colorSecondaryVariant">#379e91</item> <!-- A darker, muted teal -->
        <item name="colorOnSecondary">@color/white</item> <!-- Ensures good contrast -->

        <!-- Status bar color. -->
        <item name="android:statusBarColor">#2a6db2</item> <!-- Matches primaryVariant -->
    </style>

    <!-- Christmas theme. -->
    <style name="Theme.CAIRclient.Christmas" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color: Christmas Red -->
        <item name="colorPrimary">@color/christmas_dark_red</item>
        <item name="colorPrimaryVariant">@color/christmas_dark_red</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color: Christmas Green -->
        <item name="colorSecondary">@color/christmas_green</item>
        <item name="colorSecondaryVariant">@color/christmas_dark_green</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>
</resources>