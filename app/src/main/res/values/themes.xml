<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Default application theme. -->
    <style name="Theme.CAIRclient" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>

    <!-- Christmas theme. -->
    <style name="Theme.CAIRclient.Christmas" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color: Christmas Red -->
        <item name="colorPrimary">@color/christmas_dark_red</item>
        <item name="colorPrimaryVariant">@color/christmas_dark_red</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color: Christmas Green -->
        <item name="colorSecondary">@color/christmas_green</item>
        <item name="colorSecondaryVariant">@color/christmas_dark_green</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>
</resources>